pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
/*
    stage('Install Dependencies') {
      steps {
        sh 'npm install -g newman'
        sh 'npm install -g newman-reporter-html'
        sh 'npm install'
      }
    }
    */

    stage('Clone repository') {
      steps {
        checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'master']],
                    doGenerateSubmoduleConfigurations: false,
                    extensions: [[$class: 'CloneOption', noTags: true, reference: '', shallow: false]],
                    submoduleCfg: [],
                    userRemoteConfigs: [[
                       credentialsId: 'github_jenkins_access', url: 'https://github.com/Ohernandezm/Obrador-copy.git'
                    ]]
                ])
      }
    }

   /* stage('Build Docker') {
