pipeline {
  agent any

  stages {
    stage('Install Dependencies') {
      steps {
        sh 'npm install -g newman'
        sh 'npm install -g newman-reporter-html'
        sh 'npm install'
      }
    }
    stage('Clone Repository Obrador') {
      steps {
        git branch: 'master', credentialsId: 'github_jenkins_access', url: 'https://github.com/Ohernandezm/Obrador-copy.git'
        git branch: 'master', credentialsId: 'github_jenkins_access', url: 'https://github.com/Ohernandezm/Devops-docker.git'

      }
    }
    stage('Build Obrador') {
      steps {
        sh 'docker compose up -d'
        sh 'npm run typeorm migration:run'
        sh 'docker ps'
      }
    } 
    stage('Test Postman') {
      steps {
        sh 'newman run  ./obrador/Monitor_Obrador.postman_collection.json -e  ./obrador/Obrador_Localhost.postman_environment.json'
      }
    }
  }
}
