pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'npm install -g newman'
        sh 'npm install -g newman-reporter-html'
        sh 'npm install'
      }
    }

    stage('Test Postman') {
      steps {
        sh 'newman run  ./obrador/Monitor_Obrador.postman_collection.json -e  ./obrador/Obrador_Prod.postman_environment.json'
      }
    }

    stage('Clone repository') {
      steps {
        git branch: 'master',
        credentialsId: 'github_jenkins_access',
        url: 'https://github.com/Ohernandezm/Obrador-copy.git'
        sh 'ls'
      }
    }
  }
}
