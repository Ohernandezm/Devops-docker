
pipeline {    
agent {
        docker { 
            image 'postman/newman_ubuntu1404:2.1.2'
        }
    }
        stages {
            stage('Probar si funciona Docker') {
                steps {
                    sh 'docker version'
                }
            } 
            stage('Test Postman') {
                steps { 
                    sh 'cd postman'
                    sh 'newman run  Monitor_Obrador.postman_collection.json -e  Obrador_Prod.postman_environment.json' 
                }
            }
        }
}
